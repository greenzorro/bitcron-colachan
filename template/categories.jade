//- 日志分类页面，图文列表

extends base

block title
	title= "日志分类 - " + site.title

block content
	.special
		#categories
			.page_wrap
				ul.cat_list
					li.life
						a.pic(href="/category/生活")
							picture
								source(srcset="/template/images/categories/life.webp")
								source(srcset="/template/images/categories/life.jpg")
								img(src="/template/images/categories/life.jpg")
						h2
							a(href="/category/生活") [ 生活 ]
						p
							|阿甘说，life is a box of chocolate
							br
							|我觉得，生活更像在玩pac-man
							br
							|转角是金豆还是妖怪，反正我看不到
							br
							|此处记载着我的生活轨迹
							br
							|有金豆，也有妖怪，但更多的只是普通的白豆
					li.translate
						a.pic(href="/category/翻译")
							picture
								source(scrset="/template/images/categories/translate.webp")
								source(scrset="/template/images/categories/translate.jpg")
								img(src="/template/images/categories/translate.jpg")
						h2
							a(href="/category/翻译") [ 翻译 ]
						p
							|翻译项目如今已经停刊
							br
							|留下的180篇国外设计译文会永远开放
							br
							|这个持续4年的项目见证了我的成长
							br
							|在此要对自己的坚持说一声感谢
							br
							|完满收官，功成身退
					li.geek
						a.pic(href="/category/极客")
							picture
								source(scrset="/template/images/categories/geek.webp")
								source(scrset="/template/images/categories/geek.jpg")
								img(src="/template/images/categories/geek.jpg")
						h2
							a(href="/category/极客") [ 极客 ]
						p
							|作为一名业余geek
							br
							|捣鼓与尝鲜，是我的兴致所在
							br
							|然后便难以自持地想要对某事物评头论足一通
							br
							|另外我还有一项固定爱好
							br
							|与功夫网斗智斗勇，其乐无穷！
					li.humor
						a.pic(href="/category/幽默")
							picture
								source(scrset="/template/images/categories/humor.webp")
								source(scrset="/template/images/categories/humor.jpg")
								img(src="/template/images/categories/humor.jpg")
						h2
							a(href="/category/幽默") [ 幽默 ]
						p
							|活着本身就是一场巨大的巧合
							br
							|地球到太阳的距离、地球自转公转周期、大气中氧气浓度、地表水所占比例、 微妙却平衡的生态圈……等等
							br
							|稍有差池，我们便不存在了，生活也不存在了
							br
							|所以，请笑一个
					li.food
						a.pic(href="/category/美食")
							picture
								source(scrset="/template/images/categories/food.webp")
								source(scrset="/template/images/categories/food.jpg")
								img(src="/template/images/categories/food.jpg")
						h2
							a(href="/category/美食") [ 美食 ]
						p
							|美食，任何时候都值得期待
							br
							|作为一枚有DIY精神的吃货
							br
							|时常折腾各种原料排列组合
							br
							|立志奋发摆脱三脚猫的烹饪水品
							br
							|特设此栏目，自勉之~
					li.photo
						a.pic(href="/category/照片")
							picture
								source(scrset="/template/images/categories/photo.webp")
								source(scrset="/template/images/categories/photo.jpg")
								img(src="/template/images/categories/photo.jpg")
						h2
							a(href="/category/照片") [ 照片 ]
						p
							|我不是摄影师
							br
							|只是爱用照片讲故事
							br
							|从漫漫旅途，到阳台小憩
							br
							|很多时候
							br
							|千言万语远不如一声清脆快门
					li.media
						a.pic(href="/category/影音")
							picture
								source(scrset="/template/images/categories/media.webp")
								source(scrset="/template/images/categories/media.jpg")
								img(src="/template/images/categories/media.jpg")
						h2
							a(href="/category/影音") [ 影音 ]
						p
							|音乐与电影是最自由的存在
							br
							|听见的不是旋律，看见的也不是画面
							br
							|而是每颗心底属于自己的故事
							br
							|千变万化，却都美妙绝伦
							br
							|最纯粹的自由，人人都可拥有
					li.book
						a.pic(href="/category/写作")
							picture
								source(scrset="/template/images/categories/book.webp")
								source(scrset="/template/images/categories/book.jpg")
								img(src="/template/images/categories/book.jpg")
						h2
							a(href="/category/写作") [ 写作 ]
						p
							|阅读与写作总能让人身心愉悦，思维涌动
							br
							|我爱小说，或只是不带任何立场的纯粹的故事
							br
							|踏入时光河流，漫无目的地沉浮
							br
							|这里有我畅游书海的感悟
							br
							|和屈指可数几篇原创小说
					li.dream
						a.pic(href="/category/梦境")
							picture
								source(scrset="/template/images/categories/dream.webp")
								source(scrset="/template/images/categories/dream.jpg")
								img(src="/template/images/categories/dream.jpg")
						h2
							a(href="/category/梦境") [ 梦境 ]
						p
							|我需要专门为梦开设一个分类
							br
							|因为我做的梦不太寻常
							br
							|光怪陆离，难以捉摸
							br
							|这些梦境似乎并不来源于生活
							br
							|就这么突然冒出来的
					li //-防止最后一项独占一行，太宽影响显示效果

				include include/paginator.jade
