for post in posts
	if post.cover
		//- post with imgs
		article.post.img(bg=post.cover)
			.content
				h1.title
					a(href=post.url)= post.title
				.post_body= post.content.opening or post.content.limit(300)
				.info.clearfix
					.date
						.icon-icon_clock
						time
							{{post.date.format('%Y-%m-%d')}}
					.visitors
						.icon-icon_book
						span
							{{ post.visits or 0 }}
					if post.tags
						.tags
							for tag in post.tags
								a(href="/tag/{{tag}}")= tag
	else
		//- post with only text
		article.post.text
			.content
				h1.title
					a(href=post.url)= post.title
				.post_body= post.content.opening or post.content.limit(300)
				.info.clearfix
					.date
						.icon-icon_clock
						time
							{{post.date.format('%Y-%m-%d')}}
					.visitors
						.icon-icon_book
						span
							{{ post.visits or 0 }}
					if post.tags
						.tags
							for tag in post.tags
								a(href="/tag/{{tag}}")= tag
